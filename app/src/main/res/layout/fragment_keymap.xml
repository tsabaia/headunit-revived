<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="?android:attr/colorBackground">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/keymap"
            app:navigationIcon="@drawable/ic_arrow_back_white"
            app:titleTextColor="?android:attr/textColorPrimary"
            app:navigationIconTint="?android:attr/textColorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_dpad_up"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="64dp"
                    android:text="&#8593;"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_soft_left"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="SL"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_dpad_left"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="64dp"
                    android:text="&#8592;"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_dpad_center"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="64dp"
                    android:text="OK"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_soft_right"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="128dp"
                    android:text="SR"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_dpad_right"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="128dp"
                    android:layout_marginTop="64dp"
                    android:text="&#8594;"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_dpad_down"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="128dp"
                    android:text="&#8595;"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_media_previous"
                    android:layout_width="80dp"
                    android:layout_height="64dp"
                    android:text="&#9664;&#9664;"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_media_play"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="80dp"
                    android:text="&#9654;"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_media_play_pause"
                    android:layout_width="80dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="64dp"
                    android:text="&#9654;/&#10073;&#10073;"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_media_pause"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="64dp"
                    android:text="&#10073;&#10073;"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_media_next"
                    android:layout_width="80dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="126dp"
                    android:text="&#9654;&#9654;"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_nav"
                    android:layout_width="72dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="0dp"
                    android:text="NAV"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_call"
                    android:layout_width="72dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="72dp"
                    android:text="CALL"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_music"
                    android:layout_width="72dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="144dp"
                    android:textSize="14sp"
                    android:text="MUSIC"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_search"
                    android:layout_width="72dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="216dp"
                    android:text="MIC"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/keycode_night"
                    android:layout_width="72dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="288dp"
                    android:textSize="14sp"
                    android:text="NIGHT"
                    android:padding="0dp"
                    app:backgroundTint="@color/material_grey_700" />

            </FrameLayout>

            <TextView
                android:id="@+id/keypress_debugger_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:textSize="20sp"
                android:text="Last Key Press: None"
                android:textColor="?android:attr/textColorPrimary"/>

        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>